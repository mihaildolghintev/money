<h2 class='text-4xl mb-10'>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="my-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border rounded py-1 px-2' %>
  </div>
  <div class="my-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'border rounded py-1 px-2' %>
  </div>
  <div class="my-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border rounded py-1 px-2' %>
  </div>
  <div class="mb-10">
    <%= f.submit "Sign up", class: 'rounded bg-yellow-300 hover:bg-yellow-400 py-1 px-3' %>
  </div>
<% end %>
<%= render "users/shared/links" %>
