<h2 class='text-4xl mb-10'>Log in</h2>
<div class="width-100">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="my-2">
      <%= f.label :email, class: 'text-sm' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border rounded py-1 px-2' %>
    </div>
    <div class="my-2">
      <%= f.label :password, class: 'text-sm' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'border rounded py-1 px-2' %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="my-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'text-sm' %>
      </div>
    <% end %>
    <div class="mb-10">
      <%= f.submit "Log in", class: 'rounded bg-yellow-300 hover:bg-yellow-400 py-1 px-3' %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
