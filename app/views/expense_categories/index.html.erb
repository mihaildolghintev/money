<p id="notice"><%= notice %></p>
<div class='flex justify-center align-middle gap-10 mb-10'>
  <h1 class='text-3xl'>Expense Categories</h1>
  <%= link_to 'New Category', new_expense_category_path, class: 'bg-yellow-200 hover:bg-yellow-300 rounded p-2' %>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @expense_categories.each do |expense_category| %>
      <tr class='hover:bg-yellow-50'>
        <td><%= expense_category.name %></td>
        <td>
          <div class='flex justify-center gap-4'>
            <!-- SHOW LINK -->
            <%= link_to 'Show',
             expense_category,
              class: 'bg-yellow-100 py-1 px-3 rounded' %>
            <!-- EDIT LINK -->
            <%= link_to 'Edit',
             edit_expense_category_path(expense_category),
              class: 'bg-gray-200 py-1 px-3 rounded' %>
            <!-- DELETE LINK -->
            <%= link_to 'Destroy',
             expense_category,
              method: :delete,
               data: { confirm: 'Are you sure?' },
                class: 'bg-red-200 rounded py-1 px-3' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
