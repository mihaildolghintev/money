    </div>

    <div class="mb-10">
      <%= form.label :amount, class: 'text-sm w-auto mr-4' %>
      <%= form.text_field :amount, class: 'border rounded py-1 px-2 w-3/4' %>
    </div>

    <div class="actions">
      <%= form.submit class: 'rounded bg-yellow-200 hover:bg-yellow-300 py-1 px-3' %>
    </div>
  </div>
<% end %>
